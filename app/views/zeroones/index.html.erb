<div class = 'mt-3'>
    <%= link_to  "gamestart", new_zeroone_path, class: 'float-right btn btn-info' %>

    <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">zeroone</a>
    </li>
    </ul>

    <div class="tab-content">
    <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab">
        <table class="table table-bordered mt-3">
                <thead>
                    <th>Score</th>
                    <th>日付</th>
                    <th></th>
                </thead>
                <tbody>
            <% @zeroones.each do |zeroone| %>
                    <% if zeroone.remain == 0%>
                    <td><%= zeroone.ave %></td>
                    <%else%>
                    <td></td>
                    <%end%>
                    <td><%= zeroone.created_at.strftime('%Y/%m/%d %H:%M')%></td>
                    <td><%= link_to  "詳細", zeroone_path(zeroone.id) %></td>
                </tbody>
                <div>
                </div>
            <% end %>
        </table>
    </div>
</div>
</div>