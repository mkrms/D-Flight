<!DOCTYPE html>
<html>
  <head>
    <title>Flight</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">
    <a href="/" class="navbar-brand">
      <%= image_tag 'free.png',class: '', style: 'width: 50px; height: 50px;'%>
      Flight
    </a>
    <% if user_signed_in? %>
        <h4 class = 'text-white text-center'>ようこそ、<%= current_user.name %>さん</h4>
      <div>
        <%= link_to 'プロフィール変更', edit_user_registration_path, class: 'btn btn-primary'%>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete ,class:'btn btn-secondary'%>
      </div>
    <% else %>
      <div>
        <%= link_to 'サインアップ', new_user_registration_path, class: 'btn btn-success'%>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </nav>
    <div class = 'container'>
    <%= yield %>
    </div>
  </body>
</html>
